#:import sm kivy.uix.screenmanager
#:import orientation plyer.orientation
ScreenManager:
    id:manager
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        name:'home'
        FloatLayout:
            orientation:'vertical'
            MDIconButton:
                icon:"segment"
                pos_hint:{"center_x":.9,"center_y":.95}
                user_font_size:"35sp"
                on_release:
                    app.screen_capture("select")
            Front:
                pos_hint:{'center_x':.5, 'center_y':.7}
                on_release:
                    app.screen_capture("check")
                MDIcon:
                    icon:"wifi-remove"
                    halign:"center"
                    font_size:"70sp"

            MDLabel:
                halign:"center"
                font_size:"18sp"
                text:"Check SIMS Status"
                font_name:"components/fonts/Gill Sans.otf"
                pos_hint:{'center_x':.5, 'center_y':.59}
            Front:
                pos_hint:{'center_x':.5, 'center_y':.4}
                on_release:
                    app.screen_capture("select")
                MDIcon:
                    icon:"door-open"
                    halign:"center"
                    font_size:"70sp"

            MDLabel:
                halign:"center"
                font_size:"21sp"
                text:"Login to SIMS"
                pos_hint:{'center_x':.5, 'center_y':.29}
                font_name:"components/fonts/Gill Sans.otf"


    MDScreen:
        name:"results"
        FloatLayout:
            Emergency:
                pos_hint:{ "center_y":.96}
                MDLabel:
                    halign:"left"
                    text:"SELECT"
                    pos_hint:{"center_x":.6}
                    font_size:"18sp"
                    font_name:"components/fonts/Gill Sans.otf"

            Front:
                pos_hint:{'center_x':.3, 'center_y':.65}
                on_release:
                    orientation.set_sensor(mode='any')
                    app.run_results()
                MDIcon:
                    icon:"clipboard-text-outline"
                    halign:"center"
                    font_size:"70sp"
            MDLabel:
                halign:"center"
                text: " View in SIMS"
                font_size:"21sp"
                size_hint: .4, .06
                pos_hint:{'center_x':.3, 'center_y':.54}
                font_name:"components/fonts/Gill Sans.otf"
            Front:
                pos_hint:{'center_x':.7, 'center_y':.65}
                on_release:
                    app.screen_capture("offline_result")
                    app.add_ddt()
                MDIcon:
                    icon:"network-strength-off-outline"
                    halign:"center"
                    font_size:"70sp"
            MDLabel:
                halign:"center"
                text: "View offline"
                font_size:"21sp"
                size_hint: .4, .06
                pos_hint:{ 'center_y':.5}
                pos_hint:{'center_x':.7, 'center_y':.54}
                font_name:"components/fonts/Gill Sans.otf"

    MDScreen:
        name:"check"
        on_enter:
            app.toast_this("PRESS THIS!")
        FloatLayout:
            Front:
                id:valid
                size:app.size_x/3,app.size_y/20.9
                pos_hint:{'center_x':1.5, 'center_y':.9}
                md_bg_color: 1,1,1,1

                MDLabel:
                    id:status
                    halign:"center"
                    text:app.status
                    theme_text_color: "Custom"
                    text_color: 0, .5, 0, 1
                    font_name:"components/fonts/Gill Sans.otf"

            Front:
                id:back_leash
                size:app.size_x/1.4,app.size_y/1.9
                pos_hint:{'center_x':.5, 'center_y':.5}
                md_bg_color:.8, .8, .8, .7
            Front:
                size:app.size_x/1.5,app.size_y/2
                pos_hint:{'center_x':.5, 'center_y':.5}
                on_release:
                    app.wait_ping()
                    valid.pos_hint = {'center_x':.5, 'center_y':.85}
                MDIcon:
                    id:status_icon
                    icon:"wifi-alert"
                    halign:"center"
                    font_size:"170sp"
                    theme_text_color: "Custom"
                    text_color: .75, .75, .75, 1
    MDScreen:
        name:"select"
        FloatLayout:
            Emergency:
                pos_hint:{ "center_y":.96}
                MDLabel:
                    halign:"left"
                    text:"SELECT"
                    pos_hint:{"center_x":.6}
                    font_size:"18sp"
                    font_name:"components/fonts/Gill Sans.otf"
            Front:
                pos_hint:{'center_x':.3, 'center_y':.7}
                on_release:
                    orientation.set_sensor(mode='any')
                    app.run_create_invoice()
                MDIcon:
                    icon:"clipboard-edit-outline"
                    halign:"center"
                    font_size:"70sp"
            MDLabel:
                halign:"center"
                text: "Create Invoice"
                font_size:"21sp"
                font_name:"components/fonts/Gill Sans.otf"
                size_hint: .4, .06
                pos_hint:{'center_x':.3, 'center_y':.59}
            Front:
                pos_hint:{'center_x':.3, 'center_y':.4}
                on_release:
                    orientation.set_sensor(mode='any')
                    app.run_sims()
                MDIcon:
                    icon:"login"
                    halign:"center"
                    font_size:"70sp"

            MDLabel:
                halign:"center"
                font_size:"21sp"
                text:"Direct SIMS"
                pos_hint:{'center_x':.3, 'center_y':.29}
                font_name:"components/fonts/Gill Sans.otf"
            Front:
                pos_hint:{'center_x':.7, 'center_y':.7}
                on_release:
                    app.loged_var = "offline_invo"
                    app.offline_invo()
                MDIcon:
                    icon:"format-list-checkbox"
                    halign:"center"
                    font_size:"70sp"
            MDLabel:
                halign:"center"
                text: "Invoice List"
                font_size:"21sp"
                font_name:"components/fonts/Gill Sans.otf"
                size_hint: .4, .06
                pos_hint:{ 'center_y':.5}
                pos_hint:{'center_x':.7, 'center_y':.59}
            Front:
                pos_hint:{'center_x':.7, 'center_y':.4}
                on_release:
                    app.loged_var = "results"
                    app.login_check()
                MDIcon:
                    icon:"clipboard-text-outline"
                    halign:"center"
                    font_size:"70sp"
            MDLabel:
                halign:"center"
                text: "View Result"
                font_size:"21sp"
                font_name:"components/fonts/Gill Sans.otf"
                size_hint: .4, .06
                pos_hint:{'center_y':.5}
                pos_hint:{'center_x':.7, 'center_y':.29}
    MDScreen:
        name:"offline_invo"
        FloatLayout:
            Emergency:
                pos_hint:{ "center_y":.96}
                orientation:"horizontal"
                MDLabel:
                    halign:"center"
                    text:"Invoice List"
                    pos_hint:{"center_x":1, "center_y":.5}
                    font_size:"18sp"
                    size_hint:.1, .1
                    font_name:"components/fonts/Gill Sans.otf"
                    width: self.texture_size[1]
            ScrollView:
                pos_hint:{"top":.8, "right":1.2}
                MDGridLayout:
                    spacing:dp(10)
                    id: boxInvo
                    cols: 1
                    adaptive_height: True

    MDScreen:
        name:"offline_invoices"
        FloatLayout:
            Emergency:
                pos_hint:{ "center_y":.96}
                orientation:"horizontal"
                MDLabel:
                    halign:"center"
                    text:"Invoice List"
                    pos_hint:{"center_x":1, "center_y":.5}
                    font_size:"18sp"
                    size_hint:.1, .1
                    font_name:"components/fonts/Gill Sans.otf"
                    width: self.texture_size[1]
            MDLabel:
                halign:"center"
                text:app.year_holder
                pos_hint:{"center_x":.3, "center_y":.85}
                font_size:"20sp"
                font_name:"components/fonts/Gill Sans.otf"
            RecycleView:
                id:invoices
                key_viewclass: 'viewclass'
                key_size: 'height'
                pos_hint:{"top":.8}
                RecycleBoxLayout:
                    id:wall
                    spacing:dp(10)
                    padding: dp(10)
                    default_size: None, dp(170)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'


    MDScreen:
        name:"offline_result"
        FloatLayout:
            Emergency:
                pos_hint:{ "center_y":.96}
                orientation:"horizontal"
                MDLabel:
                    halign:"center"
                    text:"Results"
                    pos_hint:{"center_x":1, "center_y":.5}
                    font_size:"18sp"
                    size_hint:.1, .1
                    font_name:"components/fonts/Gill Sans.otf"
                    width: self.texture_size[1]
            ScrollView:
                pos_hint:{"top":.92}
                MDGridLayout:
                    id: box
                    cols: 1
                    adaptive_height: True

    MDScreen:
        name:"all_results"
        FloatLayout:
            id:results
            MDLabel:
                id:cos
                halign:"left"
                text:"Grade's"
                pos_hint:{"center_x":.6,"center_y":.96}
                font_size:"17sp"
            MDChip:
                text: 'Grade'
                id:Grade
                icon: ''
                color: 36/255, 146/255, 255/255, 1
                theme_text_color:"Custom"
                text_color: 1, 1, 1, 1
                pos_hint:{"center_x":.13,"center_y":.9}
                on_release:
                    shower.text = self.text
                    app.units = self.text
                    app.update_units()
                    app.update_color(Grade)
            MDChip:
                id:Remark
                text: 'Remark'
                icon: ''
                color: 36/255, 146/255, 255/255, 1
                theme_text_color:"Custom"
                text_color: 1, 1, 1, 1
                pos_hint:{"center_x":.13+.22,"center_y":.9}
                on_release:
                    shower.text = self.text
                    app.units = self.text
                    app.update_units()
                    app.update_color(Remark)
            MDChip:
                text: 'SE'
                id:SE
                icon: ''
                color: 36/255, 146/255, 255/255, 1
                theme_text_color:"Custom"
                text_color: 1, 1, 1, 1
                pos_hint:{"center_x":.13+.41,"center_y":.9}
                on_release:
                    shower.text = self.text + "(/60)"
                    app.units = self.text
                    app.update_units()
                    app.update_color(SE)
            MDChip:
                text: 'CA'
                id:CA
                icon: ''
                color: 36/255, 146/255, 255/255, 1
                theme_text_color:"Custom"
                text_color: 1, 1, 1, 1
                pos_hint:{"center_x":.13+.56,"center_y":.9}
                on_release:
                    shower.text = self.text+ "(/40)"
                    app.units = self.text
                    app.update_units()
                    app.update_color(CA)
            MDChip:
                text: 'Total'
                id:Total
                icon: ''
                color: 36/255, 146/255, 255/255, 1
                theme_text_color:"Custom"
                text_color: 1, 1, 1, 1
                pos_hint:{"center_x":.13+.73,"center_y":.9}
                on_release:
                    shower.text = self.text + "(CA+SE)"
                    app.units = self.text
                    app.update_units()
                    app.update_color(Total)
            MDLabel:
                id:shower
                halign:"center"
                text:"Grade's"
                pos_hint:{"center_x":.5,"center_y":.83}
                font_size:"21sp"

            RecycleView:
                id:result
                key_viewclass: 'viewclass'
                key_size: 'height'
                pos_hint:{"top":.8}
                RecycleBoxLayout:
                    id:wall
                    spacing:dp(10)
                    padding: dp(10)
                    default_size: None, dp(55)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'

    MDScreen:
        name:"register_code"
        FloatLayout:
            Deco:
                size: app.size_x/1.2, app.size_y/2.2
                pos_hint:{"center_x":.5,"center_y":.6}
            MDLabel:
                text:"Create login pin"
                halign:"center"
                theme_text_color: "Custom"
                font_style:"H4"
                text_color:36/255, 146/255, 255/255, 1
                pos_hint:{"center_x":.5,"center_y":.75}
                font_name:"components/fonts/Gill Sans.otf"
            MDLabel:
                text:"you will use this pin to login offline"
                halign:"center"
                theme_text_color: "Custom"
                font_style:"Caption"
                text_color:36/255, 146/255, 255/255, 1
                pos_hint:{"center_x":.5,"center_y":.71}
                font_name:"components/fonts/Gill Sans.otf"
            NumberOnlyField:
                id:pin
                mode: "rectangle"
                size_hint: .5, .09
                hint_text:"Enter pin"
                pos_hint:{'center_x':.53, 'center_y':.65}
                font_size: dp(25)
            NumberOnlyField:
                id:repin
                mode: "rectangle"
                size_hint: .5, .09
                hint_text:"Re-enter pin"
                pos_hint:{'center_x':.53, 'center_y':.55}
                font_size: dp(25)
                on_text:
                    app.pin_verify(self)
            MDRaisedButton:
                id:l
                text: "Create"
                size_hint: .4, .06
                pos_hint:{'center_x':.65, 'center_y':2}
                on_release:
                    app.pin_save()

    MDScreen:
        name:"login"
        FloatLayout:
            Deco:
                size: app.size_x/1.2, app.size_y/2.2
                pos_hint:{"center_x":.5,"center_y":.6}
            MDLabel:
                text:"Login sims"
                halign:"center"
                theme_text_color: "Custom"
                font_style:"H4"
                text_color:36/255, 146/255, 255/255, 1
                pos_hint:{"center_x":.5,"center_y":.75}
                font_name:"components/fonts/Gill Sans.otf"
            MDTextField:
                id:reg
                mode: "rectangle"
                size_hint: .6, .09
                hint_text:"Reg Number"
                pos_hint:{'center_x':.53, 'center_y':.65}
                font_size: dp(20)
            MDTextField:
                id:pass_word
                mode: "rectangle"
                size_hint: .6, .09
                hint_text:"Password"
                pos_hint:{'center_x':.53, 'center_y':.55}
                font_size: dp(23)
            MDRaisedButton:
                id:lgs
                text: "Login"
                size_hint: .4, .06
                pos_hint:{'center_x':.65, 'center_y':.45}
                on_release:
                    app.login_verify(reg.text, pass_word.text)

    MDScreen:
        name:"login_view"
        FloatLayout:
            Deco:
                size: app.size_x/1.2, app.size_y/2.2
                pos_hint:{"center_x":.5,"center_y":.6}
            MDLabel:
                text:"Login"
                halign:"center"
                theme_text_color: "Custom"
                font_style:"H3"
                text_color:36/255, 146/255, 255/255, 1
                pos_hint:{"center_x":.5,"center_y":.75}
                font_name:"components/fonts/Gill Sans.otf"
            MDLabel:
                text:"Enter your passcode"
                halign:"center"
                font_style:"Caption"
                text_color:36/255, 146/255, 255/255, 1
                pos_hint:{"center_x":.5,"center_y":.7}
                font_name:"components/fonts/Gill Sans.otf"
            MDIcon:
                id:locks
                icon:"lock"
                halign:"center"
                pos_hint:{"center_x":.2,"center_y":.58}
            NumberOnlyField:
                id:login_code
                mode: "rectangle"
                size_hint: .5, .09
                hint_text:"Code"
                password:True
                pos_hint:{'center_x':.53, 'center_y':.58}
                font_size: dp(25)
                on_text:
                    app.login_view()
            MDRaisedButton:
                id:view
                text: "Login"
                size_hint: .4, .06
                #pos_hint:{'center_x':.65, 'center_y':.45}
                pos_hint:{'center_x':.65, 'center_y':2}
                on_release:
                    app.login_transfer(app.loged_var)
                    login_code.text= ""

<ResultCard@MDCard>:
    adaptive_height:True
    md_bg_color:214/255, 223/255, 232/255, 1
    size_hint:None, None
    size:app.size_x/1.5, app.size_y/11
    radius:10
    ripple_color:.9, .9, .95, 1
    ripple_behavior: True
    name:""
    grade:"A"
    on_release:
        print(self.id)
        app.display_results(self.id)
        app.toast_this(self.id)
    FloatLayout:
        MDLabel:
            halign:"left"
            text:root.name
            font_size:"15sp"
            height: self.texture_size[1]
            width: self.texture_size[1]
            pos_hint: {'center_x':.55, "center_y":.5}
            font_name:"components/fonts/Gill Sans.otf"
        MDLabel:
            halign:"left"
            text:root.grade
            font_size:"18sp"
            height: self.texture_size[1]
            width: self.texture_size[1]
            pos_hint: {'center_x':1.35, "center_y":.5}
            font_name:"components/fonts/Gill Sans.otf"

<Invoices@MDBoxLayout>:
    orientation:"vertical"
    adaptive_height:True
    #md_bg_color:.5, 1, .5, 1
    radius:9
    size:dp(40),dp(150)
    number: ""
    control: ""
    invoice_amount: ""
    paid: ""
    balance: ""
    head:""
    pos_hint:{"center_x":.5,"center_y":.5}
    md_bg_color:36/255, 146/255, 255/255, 1
    FloatLayout:
        MDLabel:
            halign:"center"
            text:root.head
            pos_hint:{'center_x':.5, 'center_y':.9}
            font_name:"components/fonts/Gill Sans.otf"
        MDLabel:
            halign:"center"
            text:"Control Number"
            pos_hint:{'center_x':.15, 'center_y':.7}
            font_name:"components/fonts/Gill Sans.otf"
        MDLabel:
            halign:"center"
            font_size:sp(18)
            text:root.control
            pos_hint:{'center_x':.17, 'center_y':.4}
            font_name:"components/fonts/Gill Sans Bold.otf"
            markup:True
            bold:True
        MDLabel:
            halign:"center"
            text:"Invoice Amount"
            pos_hint:{'center_x':.5, 'center_y':.7}
            font_name:"components/fonts/Gill Sans.otf"
        MDLabel:
            halign:"center"
            text:root.invoice_amount + "/="
            pos_hint:{'center_x':.5, 'center_y':.4}
            font_name:"components/fonts/Gill Sans.otf"
        MDLabel:
            halign:"center"
            text:"Paid Amount"
            pos_hint:{'center_x':.8, 'center_y':.7}
            font_name:"components/fonts/Gill Sans.otf"
        MDLabel:
            halign:"center"
            text:root.paid + "/="
            pos_hint:{'center_x':.8, 'center_y':.4}
            font_name:"components/fonts/Gill Sans.otf"
        MDSeparator:
            pos_hint:{"center_x":.5, "center_y":.55}
            orientation:"horizontal"
            color:1, 1, 1, 1
            width:.5
            size_hint:.95, None
        MDLabel:
            halign:"center"
            text:root.balance + "/="
            font_size:"20sp"
            pos_hint:{'center_x':.8, 'center_y':.15}
            font_name:"components/fonts/Gill Sans.otf"
        MDLabel:
            halign:"center"
            text:"100%"
            pos_hint:{'center_x':.15, 'center_y':.15}
            font_name:"components/fonts/Gill Sans.otf"


<Invoice>:
    #orientation: "vertical"
    md_bg_color: 1, 1, 1, 1
    pos_hint:{"center_x":.5,"center_y":.3}
    padding: "10dp"
    #spacing: "5dp"
    border_radius: 3
    border_color_a: .5
    border_color_a: 1
    adaptive_height:True
    radius: [3]
    size_hint: None, None
    size: app.size_x/1.5, app.size_y/11
    focus_behavior: False
    ripple_color:.9, .9, .95, 1
    ripple_behavior: True
    elevation:20
    on_release:
        print(root.name)
        app.year_holder = root.name
        app.get_invoice_data(root.name)
        app.screen_capture("offline_invoices")
    FloatLayout:
        MDIcon:
            icon:root.icon
            badge_icon:"cat"
            font_size:"30sp"
            theme_text_color:"Custom"
            text_color: 1, .5, .5, 1
            pos_hint:{"center_x":.5,"center_y":.5}
        MDLabel:
            text:root.name
            font_size:"20sp"
            halign:"center"
            pos_hint:{"center_x":.5,"center_y":.5}


<Content>:
    radius:10
    #height:50
    size:app.size_x, 150
    md_bg_color:214/255, 223/255, 232/255, 1
    adaptive_height:True
    #adaptive_width:True
    FloatLayout:
        MDLabel:
            text:"GPA:"+" "+root.gpa
            halign:"left"
            font_size:"19sp"
            theme_text_color: "Custom"
            text_color:26/255, 54/255, 113/255, 1
            pos_hint:{"center_x":.7,"center_y":.5}
            font_name:"components/fonts/Gill Sans.otf"
        MDLabel:
            text:root.remark
            halign:"left"
            font_size:"19sp"
            theme_text_color: "Custom"
            text_color:26/255, 54/255, 113/255, 1
            pos_hint:{"center_x":1.1,"center_y":.5}
            font_name:"components/fonts/Gill Sans.otf"
        MDLabel:
            id:lvnm
            text:root.level_name
            pos_hint:{"center_x":9,"center_y":9}
            font_name:"components/fonts/Gill Sans.otf"
        MDIconButton:
            icon:"arrow-right-drop-circle-outline"
            pos_hint:{"center_x":.92,"center_y":.5}
            on_release:
                app.screen_capture("all_results")
                print(lvnm.text)
                app.get_all_result(lvnm.text)
                app.get_cos_name(lvnm.text)


<Emergency@MDBoxLayout>:
    radius:9
    adaptive_height:True
    pos_x: .27
    pos_y: .64
    height:dp(65)
    md_bg_color:214/255, 223/255, 232/255, 1
    #pos_hint:{"center_x":.5,"top":.8}
    orientation:"vertical"

<Front@MDCard>:
    radius:20
    #height:240
    elevation:9
    size_hint:None, None
    size:app.size_x/3,app.size_y/6
    md_bg_color:80 / 225, 136 / 225, 225 / 225, 1
    adaptive_height:True
    adaptive_width:True

<Deco@MDCard>:
    orientation: "vertical"
    md_bg_color: 1, 1, 1, 1
    padding: "10dp"
    #spacing: "5dp"
    border_radius: 3
    border_color_a: .5
    radius: [9]
    size_hint: None, None
    size: app.size_x/1, app.size_y/2.5
    focus_behavior: False
    ripple_behavior: False